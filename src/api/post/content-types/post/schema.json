{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "posts"
    },
    "services": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::service.service",
      "inversedBy": "posts"
    },
    "region": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::region.region",
      "inversedBy": "posts"
    },
    "isFeatured": {
      "type": "boolean",
      "default": false
    },
    "price": {
      "type": "string",
      "required": true
    },
    "lat": {
      "type": "string",
      "required": true
    },
    "lon": {
      "type": "string",
      "required": true
    },
    "itinerary": {
      "type": "text",
      "required": false
    },
    "link": {
      "type": "string"
    },
    "phone": {
      "type": "string"
    },
    "adress": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "slider": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "bookingLink": {
      "type": "string"
    },
    "description": {
      "type": "text"
    }
  }
}
